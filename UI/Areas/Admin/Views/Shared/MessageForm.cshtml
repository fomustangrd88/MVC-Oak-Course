@using UI.Areas.Admin
@using BLL

@if (ViewBag.ProcessState == General.Messages.AddSuccess)
{
    <div class="alert alert-success">
        <strong>Success! Add operation was completed successfully.</strong>
    </div>
}
else if (ViewBag.ProcessState == General.Messages.EmptyArea)
{
    <div class="alert alert-danger">
        <strong>Error! Please fill in the necessary area(s).</strong>
    </div>
}
else if (ViewBag.ProcessState == General.Messages.UpdateSuccess)
{
    <div class="alert alert-success">
        <strong>Success! Update operation was completed successfully.</strong>
    </div>
}
else if (ViewBag.ProcessState == General.Messages.ImageMissing)
{
    <div class="alert alert-danger">
        <strong>Error! Please select an image.</strong>
    </div>
}
else if (ViewBag.ProcessState == General.Messages.ExtensionError)
{
    <div class="alert alert-danger">
        <strong>Error! Please select valid extension.</strong>
    </div>
}
else if (ViewBag.ProcessState == General.Messages.GeneralError)
{
    <div class="alert alert-danger">
        <strong>Error!</strong>
    </div>
}