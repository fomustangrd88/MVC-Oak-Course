@model DTO.SocialMediaDTO

<div class="box-body">
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Social Media Name" })
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="form-group">
        <label>Link</label>
        @Html.TextBoxFor(x => x.Link, new { @class = "form-control", @placeholder = "Social Media Link" })
        @Html.ValidationMessageFor(x => x.Link)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.SocialImage)
        @*<div class="input-group">
            <div class="custom-file">
                <input type="file" class="custom-file-input" name="SocialImage" accept="image/gif,image/jpeg,image/jpg,image/png" onchange="$('#SocialImage')[0].src = window.URL.createObjectURL(this.files[0])">
                <label class="custom-file-label" for="SocialImage">Choose Image</label>
            </div>
        </div>*@
        <input type="file" name="SocialImage" accept="image/gif,image/jpeg,image/jpg,image/png" onchange="$('#SocialImage')[0].src = window.URL.createObjectURL(this.files[0])" />
        <br />
        @if (Model != null && Model.ImagePath != null)
        {
            <br />
            <img src="~/Areas/Admin/Content/socialmedia/@Model.ImagePath" width="300" height="200" id="SocialImage" />
        }
        else
        {
            <img src="~/Areas/Admin/Content/tempimage/placeholder.gif" width="300" height="200" id="SocialImage" />
        }
    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
    <input type="number" name="HiddenSocialMediaID" value="@Model.ID" hidden />
</div>